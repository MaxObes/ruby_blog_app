
<div class="max-w-xl mx-auto px-4 py-8">
  
<h1 class="text-3xl font-bold text-gray-900 mb-4 text-center">New Post</h1>

  <%= form_with(model: @post, local: true) do |form| %>
    <% if @post.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 text-red-800 rounded">
        <h2 class="text-xl font-bold mb-2"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: "block font-medium text-gray-700 mb-1" %>
      <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:ring focus:border-blue-300 bg-white text-gray-900" %>
    </div>

    <div class="mb-4">
      <%= form.label :body, class: "block font-medium text-gray-700 mb-1" %>
      <%= form.text_area :body, rows: 6, class: "w-full px-4 py-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:ring focus:border-blue-300 bg-white text-gray-900" %>
    </div>

    <div class="text-center">
      <%= form.submit class: "px-5 py-2.5 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
