<% content_for :title, @post.title %>

<div class="max-w-xl mx-auto px-4 py-8">
  <% if notice %>
    <div class="mb-6 p-4 bg-green-100 text-green-800 rounded shadow">
      <%= notice %>
    </div>
  <% end %>

  <%= render @post %>

  <div class="mt-6 flex flex-col items-center gap-4">
    <%= link_to "Edit this post", edit_post_path(@post), class: "inline-block px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
    <%= link_to "Back to posts", posts_path, class: "inline-block px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" %>
    <%= button_to "Destroy this post", @post, method: :delete, class: "inline-block px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
  </div>
</div>
